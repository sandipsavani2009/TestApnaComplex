<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/doc_category_item_height"
    android:id="@+id/doc_cat_parent"
    android:gravity="center"
    android:layout_marginTop="@dimen/default_half_margin"
    android:layout_marginBottom="@dimen/default_half_margin"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin">

    <ImageView
        android:id="@+id/doc_cat_icn_imgView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        />

    <com.test.apnacomplex.custom.CustomTextView
        android:id="@+id/doc_cat_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/doc_cat_name_text_size"
        app:typeface="roboto"/>

    <com.test.apnacomplex.custom.CustomTextView
        android:id="@+id/doc_cat_count_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="normal"
        android:textSize="@dimen/doc_cat_num_text_size"
        app:typeface="roboto_light"/>

</LinearLayout>
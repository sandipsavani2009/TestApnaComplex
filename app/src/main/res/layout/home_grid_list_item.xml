<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/home_grid_item_width"
    android:layout_height="@dimen/home_grid_item_height">

    <ImageView
        android:id="@+id/home_grid_item_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <com.test.apnacomplex.custom.CustomTextView
        android:id="@+id/home_grid_item_label_imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_grid_item_bottom_bar_height"
        android:gravity="center"
        android:text="Repo"
        app:typeface="roboto"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>